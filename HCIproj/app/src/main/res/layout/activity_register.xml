<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:text="Password: "
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_matric"
        android:layout_alignBottom="@+id/register_matric"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:text="User ID:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/register_password"
        android:layout_alignLeft="@+id/textview"
        android:layout_alignRight="@+id/register_password"
        android:layout_alignStart="@+id/textview"
        android:layout_below="@+id/textview"
        android:singleLine="true"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview"
        android:layout_below="@+id/register_campus"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="290dp" />

    <Button
        android:id="@+id/register_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_back"
        android:layout_alignBottom="@+id/register_back"
        android:layout_alignEnd="@+id/register_password"
        android:layout_alignRight="@+id/register_password"
        android:onClick="register_register"
        android:text="Register"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="447dp" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/register_matric"
        android:layout_alignLeft="@+id/register_matric"
        android:layout_alignRight="@+id/register_matric"
        android:layout_alignStart="@+id/register_matric"
        android:layout_below="@+id/register_matric"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="152dp" />

    <Button
        android:id="@+id/register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/register_password"
        android:layout_toStartOf="@+id/register_password"
        android:onClick="register_back"
        android:text="Back"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="447dp" />

    <EditText
        android:id="@+id/register_matric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/register_name"
        android:layout_alignLeft="@+id/register_name"
        android:layout_alignRight="@+id/register_name"
        android:layout_alignStart="@+id/register_name"
        android:layout_below="@+id/register_name"
        android:ems="10"
        android:hint="Matric No/Staff ID"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_name"
        android:layout_alignBottom="@+id/register_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Name:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="72dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_email"
        android:layout_alignBottom="@+id/register_email"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:text="Email:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_contact"
        android:layout_alignBottom="@+id/register_contact"
        android:layout_alignParentStart="true"
        android:text="Contact:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="206dp" />

    <EditText
        android:id="@+id/register_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_email"
        android:layout_alignStart="@+id/register_email"
        android:layout_below="@+id/register_email"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_campus"
        android:layout_alignBottom="@+id/register_campus"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:text="Campus:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="253dp" />

    <EditText
        android:id="@+id/register_campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_contact"
        android:layout_alignStart="@+id/register_contact"
        android:layout_below="@+id/register_contact"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_password"
        android:layout_alignBottom="@+id/register_password"
        android:text="Password: "
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="361dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:text="Confirm"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="336dp" />

    <EditText
        android:id="@+id/register_cfmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_below="@+id/register_password"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="336dp" />


</RelativeLayout>